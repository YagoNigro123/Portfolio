<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Mensajes de Contacto</h2>
    <a href="/" class="btn btn-primary">Volver al Inicio</a>
  </div>

  {{#if messages.length}}
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Mensaje</th>
            <th>Fecha</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each messages}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td>
                <div class="message-content">{{this.message}}</div>
              </td>
              <td>{{this.formatted_date}}</td>
              <td>
                <form action="/admin/messages/delete/{{this.id}}" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar este mensaje?');">
                  <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  {{else}}
    <div class="alert alert-info">
      No hay mensajes disponibles en este momento.
    </div>
  {{/if}}
</div>

<style>
  .message-content {
    max-width: 300px;
    max-height: 100px;
    overflow-y: auto;
    white-space: pre-line;
  }
</style>